# Instagram credentials for the observer account
INSTAGRAM_USERNAME=your_observer_username
INSTAGRAM_PASSWORD=your_observer_password

# MongoDB configuration
MONGO_URI=mongodb://localhost:27017
MONGO_DB_NAME=instatrack

# Comma-separated list of target accounts to follow
TARGET_ACCOUNTS=account1,account2

# Daily scheduler time (UTC)
SCRAPE_HOUR_UTC=3
SCRAPE_MINUTE_UTC=0

# Optional tuning
MIN_REQUEST_DELAY=2
MAX_REQUEST_DELAY=5
MAX_RETRIES=3
RETRY_BACKOFF_SECONDS=30

# Dashboard auto refresh interval (seconds, 0 to disable)
AUTO_REFRESH_INTERVAL_SECONDS=0

# Enable mongomock for local testing
# USE_MOCK_DB=1
